<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editText_Enter_Tip"
        android:layout_width="218dp"
        android:layout_height="48dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="220dp"
        android:ems="10"
        android:gravity="center_horizontal|center_vertical"
        android:hint="Enter Tip Percent"
        android:inputType="textPersonName"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_Bill_Amount" />

    <EditText
        android:id="@+id/editText_Bill_Amount"
        android:layout_width="222dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="216dp"
        android:ems="10"
        android:gravity="center_horizontal|center_vertical"
        android:hint="Enter Bill"
        android:inputType="textPersonName"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText_Guests"
        android:layout_width="216dp"
        android:layout_height="48dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="216dp"
        android:ems="10"
        android:gravity="center_horizontal|center_vertical"
        android:hint="Enter Guests"
        android:inputType="textPersonName"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_Tip"
        android:layout_width="87dp"
        android:layout_height="27dp"
        android:layout_marginStart="148dp"
        android:layout_marginTop="76dp"
        android:background="@color/lightGray"
        android:text="Tip (%)"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_Bill" />

    <TextView
        android:id="@+id/textView_Guests"
        android:layout_width="133dp"
        android:layout_height="25dp"
        android:layout_marginStart="112dp"
        android:layout_marginTop="80dp"
        android:background="@color/lightGray"
        android:text="# of Guests"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_Bill"
        android:layout_width="61dp"
        android:layout_height="26dp"
        android:layout_marginStart="164dp"
        android:layout_marginTop="28dp"
        android:background="@color/lightGray"
        android:text="Bill"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginTop="8dp"
        android:background="@color/red"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_Enter_Tip" />

    <TextView
        android:id="@+id/textView_Amount_Total"
        android:layout_width="191dp"
        android:layout_height="32dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="444dp"
        android:background="@color/lightGreen"
        android:gravity="center_horizontal|center_vertical"
        android:textAlignment="gravity"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_Tip_Amount" />

    <TextView
        android:id="@+id/textView_Label_Total"
        android:layout_width="54dp"
        android:layout_height="32dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:background="@color/lightGray"
        android:text="Total"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_Tip_Label" />

    <TextView
        android:id="@+id/textView_Tip_Amount"
        android:layout_width="185dp"
        android:layout_height="33dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="444dp"
        android:background="@color/lightGreen"
        android:gravity="center_horizontal|center_vertical"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <TextView
        android:id="@+id/textView_Tip_Label"
        android:layout_width="65dp"
        android:layout_height="33dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:background="@color/lightGray"
        android:text="Tip ($)"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <TextView
        android:id="@+id/textView_Amount_Per_Total"
        android:layout_width="176dp"
        android:layout_height="34dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:background="@color/lightGreen"
        android:gravity="center_horizontal|center_vertical"
        android:textAlignment="gravity"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_Tip_Per_Amount" />

    <TextView
        android:id="@+id/textView_Tip_Per_Amount"
        android:layout_width="179dp"
        android:layout_height="33dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:background="@color/lightGreen"
        android:gravity="center_horizontal|center_vertical"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <TextView
        android:id="@+id/textView_Tip_Per_Label"
        android:layout_width="125dp"
        android:layout_height="29dp"
        android:layout_marginStart="376dp"
        android:layout_marginTop="20dp"
        android:background="@color/lightGray"
        android:text="Tip Per Guest ($)"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <TextView
        android:id="@+id/textView_Label_Per_Total"
        android:layout_width="118dp"
        android:layout_height="28dp"
        android:layout_marginStart="376dp"
        android:layout_marginTop="20dp"
        android:background="@color/lightGray"
        android:text="Total Per Guest"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_Tip_Per_Label" />

</androidx.constraintlayout.widget.ConstraintLayout>